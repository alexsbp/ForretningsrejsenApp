<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="304dp"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <Button
            android:id="@+id/addBusinesstrip"
            android:layout_width="202dp"
            android:layout_height="42dp"
            android:layout_marginStart="88dp"
            android:layout_marginTop="48dp"
            android:gravity="center_horizontal"
            android:onClick="NewButton"
            android:text="Add new Businesstrip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/removeCurrent" />

        <Button
            android:id="@+id/totalCost"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginStart="96dp"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:onClick="Cost"
            android:text="Calculate Total Cost"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addBusinesstrip" />

        <Button
            android:id="@+id/removeCurrent"
            android:layout_width="261dp"
            android:layout_height="42dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:onClick="RemoveCurrently"
            android:text="Remove Currently Businesstrip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="255dp">

        <Button
            android:id="@+id/seeExpenses"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginStart="69dp"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:onClick="SeeExpenses"
            android:text="Change Current Businesstrip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/newexpense"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginStart="117dp"
            android:layout_marginTop="34dp"
            android:gravity="center_horizontal"
            android:onClick="AddNewExpense"
            android:text="@string/addNewExpense"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seeExpenses" />
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>